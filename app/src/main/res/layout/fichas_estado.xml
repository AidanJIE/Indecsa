<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFichasEstado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"> <!-- ðŸ”¥ Centra todo el contenido -->

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/txtTituloEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FICHAS POR ESTADO"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Contenedor horizontal de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- BotÃ³n Hidalgo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <ImageButton
                android:id="@+id/btnHidalgo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Estado Hidalgo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hidalgo"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- BotÃ³n CDMX -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <ImageButton
                android:id="@+id/btnCDMX"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_3"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Estado CDMX" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDMX"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- BotÃ³n Puebla -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <ImageButton
                android:id="@+id/btnPuebla"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Estado Puebla" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puebla"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>