<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFichasEstado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Encabezado institucional -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#010238">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:src="@drawable/img_1"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Talento que conecta proyectos que transforman"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FICHAS POR ESTADO"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Contenedor horizontal de botones con imagen y texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <!-- Botón Hidalgo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnHidalgo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Estado Hidalgo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hidalgo"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Botón CDMX -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnCDMX"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_3"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Estado CDMX" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDMX"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Botón Puebla -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnPuebla"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Estado Puebla" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puebla"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>