<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <!-- TÃ­tulo principal -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESPECIALIDAD DE TRABAJADORES"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:textAlignment="center" />

    <!-- Botones -->
    <Button
        android:id="@+id/btnObra"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="OBRA"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnRemodelacion"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="REMODELACION"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnVentaMobiliario"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="VENTA DE MOBILIARIO"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnInstalacionMobiliario"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="INSTALACION DE MOBILIARIO"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:layout_marginBottom="30dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/img_1"/>  <!-- cambia este nombre por tu logo -->

</LinearLayout>