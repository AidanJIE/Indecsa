<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEspecialidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Encabezado institucional -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#010238">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:src="@drawable/img_1"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/txtHeaderEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Talento que conecta proyectos que transforman"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Botones de especialidad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/txtTituloEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FICHAS POR ESPECIALIDAD"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAlbanileria"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Albañilería"
            android:background="#6A1B9A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnElectricidad"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Electricidad"
            android:background="#6A1B9A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnPintura"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Pintura"
            android:background="#6A1B9A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnPlomeria"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Plomería"
            android:background="#6A1B9A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCarpinteria"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Carpintería"
            android:background="#6A1B9A"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>