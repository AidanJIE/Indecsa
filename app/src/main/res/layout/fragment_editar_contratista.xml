<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#D9D9D9"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDITAR CONTRATISTA"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <!-- Tarjeta del contratista -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <!-- Imagen -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/usuario"
            android:layout_gravity="center_vertical"
            android:contentDescription="Foto de perfil" />

        <!-- Información -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <EditText
                android:id="@+id/edinombrecont"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nombre del contratista:"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edidatit2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Descripcion del contratista"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/edidatit4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Equipo contratista"
                android:textSize="14dp"/>


            <EditText
            android:id="@+id/edidatit3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
                android:hint="Asignación de proyecto:"
                android:textSize="14dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Botones en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="GUARDAR"
            android:background="#2D2858"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="AGREGAR"
            android:background="#2D2858"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <!-- Mensaje de confirmación -->
    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SE EDITÓ CORRECTAMENTE"
        android:textAlignment="center"
        android:visibility="gone"
        android:background="#5E5E5E"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>