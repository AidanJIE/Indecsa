<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tarjeta principal MÁS GRANDE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:elevation="10dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ba_card_round">

            <!-- Título MÁS GRANDE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETALLE COMPLETO DE FICHA"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_marginBottom="20dp" />

            <!-- Contenido ampliado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <!-- Imagen MÁS GRANDE -->
                <ImageView
                    android:id="@+id/detalleImagen"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/usuario"
                    android:scaleType="centerCrop"
                    android:background="#DDDDDD"
                    android:layout_marginRight="20dp"
                    android:clipToOutline="true"
                    android:padding="2dp"
                    android:backgroundTint="#DDDDDD" />

                <!-- Datos del trabajador - TEXTO MÁS GRANDE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detalleNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del contratista"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/detalleDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Descripción del Contratista"
                        android:textSize="18sp"
                        android:textColor="#555" />

                    <TextView
                        android:id="@+id/detalleProyecto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Asignacion de Proyecto"
                        android:textSize="18sp"
                        android:textColor="#555" />

                    <TextView
                        android:id="@+id/detalleEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Equipo de trabajo"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#555" />

                </LinearLayout>
            </LinearLayout>

            <!-- INFORMACIÓN ADICIONAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:background="#F0F0F0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN ADICIONAL"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/detalleEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detalleEspecialidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialidad: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detalleTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detalleCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detalleFechaRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de registro: "
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- ¡BOTONES SOLO EN EL DETALLE! -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <!-- BOTÓN EDITAR -->
                <Button
                    android:id="@+id/detalleBtnEditar"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="EDITAR FICHA"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/bg_button_round"
                    android:elevation="4dp"
                    android:layout_marginRight="10dp" />

                <!-- BOTÓN ELIMINAR -->
                <Button
                    android:id="@+id/detalleBtnEliminar"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="ELIMINAR FICHA"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/bg_button_round"
                    android:elevation="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botón para regresar -->
        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="REGRESAR A LA LISTA"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_round"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>