<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"> <!--  Centra todo el contenido -->

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"> <!--  Centra los elementos dentro -->

            <!-- Contratista -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTRATISTA"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <!-- Asignaci贸n de proyecto -->
            <EditText
                android:id="@+id/edtProyecto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Asignaci贸n de proyecto"
                android:layout_marginBottom="16dp"/>

            <!-- Bot贸n disponible -->
            <Button
                android:id="@+id/btnDisponible"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:background="@android:color/holo_green_dark"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Fechas -->
            <Button
                android:id="@+id/btnFechaInicio"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Seleccionar Fecha de Inicio"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnFechaFin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Seleccionar Fecha de Fin"
                android:layout_marginBottom="24dp"/>

            <!-- Equipo de trabajo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo de trabajo:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ListView
                android:id="@+id/listEquipo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"/>

            <!-- Bot贸n guardar cambios -->
            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:background="#6A1B9A"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>