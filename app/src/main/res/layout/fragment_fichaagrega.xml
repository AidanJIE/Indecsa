<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:padding="10dp"
    android:layout_marginBottom="15dp"
    android:elevation="3dp">

    <!-- Encabezado MODIFICADO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGREGAR FICHA DE CONTRATISTA:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- Imagen del contratista -->
        <ImageView
            android:id="@+id/imgContratista"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/usuario"
            android:layout_marginRight="10dp"
            android:background="#CCCCCC"
            android:scaleType="centerCrop" />

        <!-- Datos del contratista -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreContratista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del contratista"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtDescripcionContratista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del contratista"
                android:textSize="14sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Botón EDITAR -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="AGREGAR"
            android:textAllCaps="false"
            android:background="#3B3673"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Calificación (estrellas) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />
    </LinearLayout>
</LinearLayout>