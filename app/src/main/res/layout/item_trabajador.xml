<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:padding="10dp"
    android:layout_marginBottom="15dp"
    android:elevation="3dp">

    <!-- Encabezado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FICHA DEL TRABAJADOR:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- Imagen del contratista -->
        <ImageView
            android:id="@+id/imgContratista"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/usuario"
            android:layout_marginRight="10dp"
            android:background="#CCCCCC"
            android:scaleType="centerCrop" />

        <!-- Datos del contratista -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Trabajador"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/DescripcionTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del Trabajador:"
                android:textSize="14sp"
                android:textColor="#333" />
            <TextView
                android:id="@+id/EspecialidadTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialidad del trabajador:"
                android:textSize="14sp"
                android:textColor="#333" />
            <TextView
                android:id="@+id/EquipoTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo del Trabajador:"
                android:textSize="14sp"
                android:textColor="#333" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:id="@+id/editext"/>
        </LinearLayout>

        <!-- Botón EDITAR -->
    </LinearLayout>

    <!-- Calificación (estrellas) -->
    <TextView
    android:id="@+id/ExperienciaTrabajador"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="Experiencia"
    android:textSize="14sp"
    android:textColor="#333" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">


        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

    <Button
        android:id="@+id/btnDisponibilidad"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:text="Disponibilidad"
        android:textAllCaps="false"
        android:background="#3B3673"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="#3B3673"
        android:layout_marginHorizontal="15dp"
        android:text="EDITAR"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />
</LinearLayout>

</LinearLayout>
