<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_CH_proyecto_estado">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proyectos por estado"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"/>

    <!-- Contenedor de botones con imagen y texto -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botón 1 con imagen y texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnHidalgo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/frame_contorno"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:contentDescription="Hidalgo"
                android:src="@drawable/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hidalgo"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Botón 2 con imagen y texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCDMX"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Ciudad de Mexico"
                android:background="@drawable/frame_contorno"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CDMX"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <!-- Botón 3 con imagen y texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPuebla"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Puebla"
                android:background="@drawable/frame_contorno"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Puebla"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>